<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_launcher_foreground"
        android:outlineAmbientShadowColor="@color/black"
        android:scrollbarThumbHorizontal="@color/purple_200" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:accessibilityHeading="true"
        android:accessibilityLiveRegion="polite"
        android:accessibilityPaneTitle=""
        android:allowUndo="true"
        android:autoLink="all"
        android:autoSizeTextType="uniform"
        android:background="@color/black"
        android:freezesText="true"
        android:shadowColor="@android:color/holo_red_light"
        android:shadowDx="23"
        android:shadowDy="23"
        android:shadowRadius="27"
        android:text="Домашняя работа !"
        android:textColor="@android:color/holo_red_dark"

        android:textSize="40dp"
        android:textStyle="bold"
        android:transitionName="1234567890" />

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CheckedTextView" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Хронометр"
        android:textSize="33dp" />

    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="50dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:format24Hour=""
        android:textColor="@color/teal_700"
        android:textSize="40dp" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:shadowColor="@color/teal_200"
        android:shadowDx="@android:integer/config_longAnimTime"
        android:text="Кнопка"
        android:textColor="@color/white" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="34dp"
        android:text="switch"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHighlight="@android:color/holo_red_dark" />


</LinearLayout>